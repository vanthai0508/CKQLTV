<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        >
        <ImageView
            android:id="@+id/img_tt_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="24sp"

            android:padding="10dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_tt_backbtn"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >


        <TextView
            android:id="@+id/txt_tt_NgayDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/12/2021"
            android:textSize="20sp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>

    <GridView
        android:id="@+id/gvDisplayPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:numColumns="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingVertical="5dp"
        >

    </GridView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:layout_margin="5dp"
        android:elevation="10dp"
        >

        <LinearLayout
            android:id="@+id/linearl_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền"
                android:textColor="@color/white"

                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_tt_TongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="780000 VNĐ"
                android:paddingTop="10dp"
                android:textColor="@color/white"

                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_tt_ThanhToan"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:text="Thanh toán"
            android:textSize="20sp"

            />

    </RelativeLayout>

</LinearLayout>